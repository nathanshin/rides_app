<%= provide(:title, "Assignments") %>

<h2><strong>All Events</strong></h2>

<div id="events">
	<% @assignments.each do |assignment| %>
		<h3 id="event-name"><%= link_to assignment.event, assignment_path(assignment) %></h3>	
		<strong><span id="location"><%= assignment.location %></span></strong>
		<p><%= assignment.date.to_formatted_s(:long) %></p>
		<hr>
	<% end %>
</div>

<div class="center">
	<%= will_paginate @assignments, renderer: BootstrapPagination::Rails %>		
</div>

